<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-3">
    <h2>listing.title</h2>
  </div>

  <div class="cards col-6 offset-3 show-card">
    <img 
      src="<%= listing.image && typeof listing.image === 'string' ? listing.image : listing.image?.url %>" 
      onerror="this.style.display='none'" 
      class="show-image" 
      alt="Listing image" 
    />
    
  <div class="card-body">
  <p class="card-text">
  
  <div><%= listing.description %></div>
  <div>&#8377; <%= listing.price.toLocaleString("en-IN") %> / night</div>
  <div><%= listing.location %></div>
  <div><%= listing.country %></div>
  </p>
</div>

  </div>
  <div class="btns">
<a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn col-1 offset-3">Edit</a>
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-dark offset-5">Delete</button>
    </form>
  </div>

  <div class="col-8 offset-3">
    <hr>
    <br>
    <h4>Leave a Review</h4> 
    <form action="/listings/<%= listing._id %>/reviews" method="post" class="mb-3 mt-3"> 
        <div class="mb-3 mt-3"> 
            <label for="rating" class="form-label"> For Rating.</label> 
            <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
        </div> 
        <div class="mb-3 mt-3"> 
            <label for="comment" class="form-label"> Comments</label>
            <textarea name="review[comment]" id="comment" cols="30" rows="10" class="form-control"></textarea> 
        </div> 
        <button class="btn btn-outline-dark">Submit</button> 
    </form> 
</div>
</div>
