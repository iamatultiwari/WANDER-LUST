<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-3">
    <h2>LISTING DETAILS</h2>
  </div>

  <div class="cards col-6 offset-3 show-card">
    <img 
      src="<%= listing.image && typeof listing.image === 'string' ? listing.image : listing.image?.url %>" 
      onerror="this.style.display='none'" 
      class="show-image" 
      alt="Listing image" 
    />
    
  <div class="card-body">
  <p class="card-text">
    <strong><%= listing.title %></strong>
  </p>
  <div><%= listing.description %></div>
  <div>&#8377; <%= listing.price.toLocaleString("en-IN") %> / night</div>
  <div><%= listing.location %></div>
  <div><%= listing.country %></div>
</div>

  </div>
  <div class="btns">
<a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn col-1 offset-3">Edit</a>
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-dark offset-5">Delete</button>
    </form>
  </div>

  
</div>
