<div class="row mt-5">
  <!-- Title -->
  <div class="col-12 text-center mb-4">
    <h1 class="display-4 fw-bold text-primary"><%= listing.title %></h1>
  </div>

  <!-- Listing Card -->
  <div class="col-md-8 offset-md-2">
    <div class="card shadow-lg rounded mb-4 border-0 hover-shadow">
      <% if (listing.image && listing.image.url) { %>
        <img 
          src="<%= listing.image.url %>" 
          class="card-img-top img-fluid rounded-top" 
          alt="Listing image" 
        />
      <% } %>

      <div class="card-body">
        <p class="text-muted mb-1">Owned by: <i><%= listing.owner.username %></i></p>
        <p class="card-text mb-3"><%= listing.description %></p>

        <div class="d-flex justify-content-between align-items-center mb-2">
          <span class="fs-5 text-success fw-bold">&#8377; <%= listing.price.toLocaleString("en-IN") %> / night</span>
          <span class="badge bg-info text-dark"><%= listing.category %></span>
        </div>

        <p class="text-secondary mb-3"><i class="bi bi-geo-alt-fill"></i> <%= listing.location %>, <%= listing.country %></p>

        <!-- Stripe Payment Button -->
        <% if(currUser) { %>
          <% if(listing.owner._id.toString() !== currUser._id.toString()) { %>
            <% if(listing.status === "available" || !listing.status) { %>
              <form action="/listings/create-checkout-session/<%= listing._id %>" method="POST" class="text-center mt-3">
                <button type="submit" class="btn btn-success btn-lg shadow-sm px-5">
                  ðŸ’³ Buy Property
                </button>
              </form>
            <% } else { %>
              <p class="text-danger text-center mt-3 fw-bold">Property Sold</p>
            <% } %>
          <% } else { %>
            <div class="d-flex justify-content-between mt-3">
              <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning fw-bold">Edit</a>
              <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                <button type="submit" class="btn btn-danger fw-bold">Delete</button>
              </form>
            </div>
          <% } %>
        <% } else { %>
          <p class="text-center text-muted mt-3 fst-italic">Login to purchase this property.</p>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Reviews Section -->
  <div class="col-md-8 offset-md-2 mt-4">
    <hr class="mb-4">

    <% if(currUser) { %>
      <h4 class="fw-bold mb-3">Leave a Review</h4> 
      <form action="/listings/<%= listing._id %>/reviews" method="POST" class="mb-4">
        <div class="mb-3">
          <label for="rating" class="form-label fw-semibold">Rating</label> 
          <fieldset class="starability-slot">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
            <% for (let i = 1; i <= 5; i++) { %>
              <input type="radio" id="first-rate<%= i %>" name="review[rating]" value="<%= i %>" />
              <label for="first-rate<%= i %>" title="<%= i %> stars"><%= i %> stars</label>
            <% } %>
          </fieldset>
        </div>


        <!-- <div id="map"></div> -->
         <div id="map" style="width: 100%; height: 400px;"></div>






        <div class="mb-3">
          <label for="comment" class="form-label fw-semibold">Comments</label>
          <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control rounded-3" placeholder="Share your experience..." required></textarea>
        </div> 
        <button class="btn btn-outline-dark fw-bold px-4">Submit</button>
      </form>
      <hr>
    <% } %>

    <h5 class="fw-bold mb-3">All Reviews</h5>
    <div class="row g-3">
      <% for (let review of listing.reviews) { %>
        <div class="card col-md-5 shadow-sm rounded p-3">
          <div class="card-body">
            <h6 class="text-primary">@<%= review.author.username %></h6>
            <p class="starability-result mb-2" data-rating="<%= review.rating %>"></p>
            <p class="text-secondary mb-2"><%= review.comment %></p>
            <% if(currUser && review.author._id.toString() === currUser._id.toString()) { %>
              <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                <button class="btn btn-sm btn-danger">Delete</button>
              </form>
            <% } %>
          </div>
        </div>
      <% } %>
    </div>

            <!-- <div class="col-md-6 offset-md-2">
      <h4> WHERE YOU WILL BE.!</h4>
      <div id="map"></div>
      </div> -->



  </div>
</div>

