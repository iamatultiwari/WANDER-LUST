<% layout("/layouts/boilerplate") %>  <!-- Use the boilerplate layout for this page -->

<div class="row">
  <div class="col-8 offset-2">  <!-- Center the form with 8 columns width and offset -->
    <br>

    <h2>Create New Listing</h2>

    <!-- Form to create a new listing -->
    <form action="/listings" method="POST" novalidate class="needs-validation " enctype="multipart/form-data" >
      
<!-- Title input using textarea -->
<div class="mb-3">
  <label for="title" class="form-level">Title</label>
  <textarea 
    id="title"
    name="listing[title]" 
    placeholder="Enter title." 
    required 
    class="form-control"></textarea>
  <div class="valid-feedback">Title looks good.</div>
  <div class="invalid-feedback">Please enter a title.</div>
</div>



      <!-- Description input using text input -->
      <div class="mb-3">
        <label for="description" class="form-level">Description</label>
        <input 
          name="listing[description]" 
          placeholder="Enter description" 
          required 
          type="text" 
          class="form-control">
          <div class="invalid-feedback">Please enter correct description.</div>
      </div>

      <!-- Image URL input -->
      <!-- <div>
        <label for="image" class="form-level">Image</label>
        <input 
          name="listing[image]" 
          placeholder="Enter image URL" 
          type="text" 
          class="form-control">
          <div class="invalid-feedback">Please enter correct image url.</div>
      </div> -->
        <!-- Image  input -->
      <div>
        <label for="image" class="form-level"> Upload Listing Image</label>
        <input 
          name="listing[image]" 
          type="file" 
          class="form-control">
          <div class="invalid-feedback">Please enter correct image url.</div>
          required
      </div>

      <!-- Price and Country fields side by side using Bootstrap grid -->
      <div class="row">
        <!-- Price input (4 columns wide) -->
        <div class="mb-3 col-md-4">
          <label for="price" class="form-level">Price</label>
          <input 
            name="listing[price]" 
            placeholder="Enter price" 
            required 
            class="form-control">
            <div class="invalid-feedback">Price is invalid.</div>
        </div>

        <!-- Country input (8 columns wide) -->
        <div class="mb-3 col-md-8">
          <label for="country" class="form-level">Country</label>
          <input 
            name="listing[country]" 
            placeholder="Enter country name" 
            type="text" 
            required 
            class="form-control">
            <div class="invalid-feedback">country name is invalid</div>
        </div>
      </div>

      <!-- Location input -->
      <div class="mb-3">
        <label for="location" class="form-level">Location</label>
        <input 
          name="listing[location]" 
          placeholder="Enter location" 
          type="text" 
          required 
          class="form-control">
          <div class="invalid-feedback">Please enter valid location.</div>
      </div>

      <br>

      <!-- Submit button -->
      <button class="btn btn-dark add-btn">Add</button>
    </form>
  </div>
</div>





