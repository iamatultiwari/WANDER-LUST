<% layout("/layouts/boilerplate") %>  <!-- Use the boilerplate layout for this page -->

<div class="row">
  <div class="col-8 offset-2">  <!-- Center the form with 8 columns width and offset -->
    <br>

    <h2>Create New Listing</h2>

    <!-- Form to create a new listing -->
    <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
      
      <!-- Title input using textarea -->
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <textarea 
          id="title"
          name="listing[title]" 
          placeholder="Enter title" 
          required 
          class="form-control"></textarea>
        <div class="valid-feedback">Title looks good.</div>
        <div class="invalid-feedback">Please enter a title.</div>
      </div>

      <!-- Description input -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <input 
          name="listing[description]" 
          placeholder="Enter description" 
          required 
          type="text" 
          class="form-control">
        <div class="invalid-feedback">Please enter correct description.</div>
      </div>

      <!-- Image input -->
      <div class="mb-3">
        <label for="image" class="form-label">Upload Listing Image</label>
        <input 
          name="listing[image]" 
          type="file" 
          class="form-control" required>
        <div class="invalid-feedback">Please upload an image.</div>
      </div>

      <!-- Price and Country fields side by side -->
      <div class="row">
        <!-- Price input -->
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input 
            name="listing[price]" 
            placeholder="Enter price" 
            required 
            class="form-control">
          <div class="invalid-feedback">Price is invalid.</div>
        </div>

        <!-- Country input -->
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input 
            name="listing[country]" 
            placeholder="Enter country name" 
            type="text" 
            required 
            class="form-control">
          <div class="invalid-feedback">Country name is invalid.</div>
        </div>
      </div>

      <!-- Location input -->
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input 
          name="listing[location]" 
          placeholder="Enter location" 
          type="text" 
          required 
          class="form-control">
        <div class="invalid-feedback">Please enter valid location.</div>
      </div>

      <!-- âœ… Category Dropdown -->
      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select class="form-select" id="category" name="listing[category]" required>
          <option value="" disabled selected>Select a category</option>
          <option value="rooms">Rooms</option>
          <option value="trending">Trending</option>
          <option value="cities">Iconic cities</option>
          <option value="mountain">Mountain</option>
          <option value="castles">Castles</option>
          <option value="pools">Amazing pools</option>
          <option value="camping">Camping</option>
          <option value="arctic">Arctic</option>
          <option value="farms">Farms</option>
          <option value="domes">Domes</option>
          <option value="boats">Boats</option>
        </select>
        <div class="invalid-feedback">Please select a category.</div>
      </div>

      <br>

      <!-- Submit button -->
      <button class="btn btn-dark add-btn">Add</button>
    </form>
  </div>
</div>