<% layout("./layouts/boilerplate") %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <!-- Card Wrapper -->
      <div class="card shadow-lg rounded p-4">

        <!-- Title -->
        <h2 class="text-center mb-4 fw-bold text-success">Login to WanderLust</h2>

        <!-- Display flash error messages if any -->
        <% if (locals.error && locals.error.length > 0) { %>
          <div class="alert alert-danger text-center">
            <%= error %>
          </div>
        <% } %>

        <!-- Login Form -->
        <form action="/login" method="POST" class="needs-validation" novalidate>
          
          <!-- Username -->
          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input 
              type="text"
              id="username"
              name="username"
              placeholder="Enter username"
              class="form-control shadow-sm"
              required
            />
            <div class="invalid-feedback">
              Please enter your username.
            </div>
          </div>

          <!-- Password -->
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input 
              type="password"
              id="password"
              name="password"
              placeholder="Enter password"
              class="form-control shadow-sm"
              required
            />
            <div class="invalid-feedback">
              Please enter your password.
            </div>
          </div>

          <!-- Submit Button -->
          <button type="submit" class="btn btn-success w-100 mt-3 shadow-sm">Login</button>

        </form>

        <!-- Signup Link -->
        <p class="text-center mt-4 text-muted">
          Don't have an account? <a href="/signup" class="text-success fw-bold">Sign up here</a>
        </p>

      </div>
    </div>
  </div>
</div>

<!-- Optional JS for Bootstrap validation -->
<script>
  (function () {
    'use strict'
    const forms = document.querySelectorAll('.needs-validation')
    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }
        form.classList.add('was-validated')
      }, false)
    })
  })()
</script>
